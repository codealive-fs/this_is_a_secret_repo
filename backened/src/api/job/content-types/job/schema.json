{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "job",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "unique": false,
      "required": false
    },
    "salary": {
      "type": "integer",
      "default": 0
    },
    "expiary_date": {
      "type": "date"
    },
    "location": {
      "type": "string"
    },
    "jobType": {
      "type": "enumeration",
      "enum": [
        "Full-Time",
        "Part-Time",
        "Permanent",
        "Contractual"
      ]
    },
    "jobDescription": {
      "type": "blocks"
    },
    "education": {
      "type": "enumeration",
      "enum": [
        "BSc. 2 Year Associate Degree",
        "Bachelors in CS/SE",
        "Bachelors in Business Administration",
        "Masters in Busniess Administration",
        "Bachelors in Project Management"
      ]
    },
    "remoteOk": {
      "type": "boolean"
    },
    "featuredJob": {
      "type": "boolean"
    },
    "datePosted": {
      "type": "datetime"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": false
    },
    "experience": {
      "type": "enumeration",
      "enum": [
        "Junior",
        "Mid-Level",
        "Senior"
      ]
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "jobs"
    },
    "firm": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::company.company",
      "inversedBy": "jobs"
    },
    "job_application": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::job-application.job-application",
      "mappedBy": "jobs"
    }
  }
}
